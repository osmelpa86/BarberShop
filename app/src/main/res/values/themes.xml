        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHighlight">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/edit_text_combine_roud_shape</item>
        <!--        <item name="android:background">@null</item>-->

    </style>

    <style name="SpinnerRound">
